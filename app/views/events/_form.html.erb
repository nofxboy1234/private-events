<%= form_with model: event do |form| %>
  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
    <% event.errors.full_messages_for(:location).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>

  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
    <% event.errors.full_messages_for(:date) do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>